<div class="page-content">
    <div class="page-header">
        <h1>发送短信
							
            <small>
                <i class="icon-double-angle-right"></i>

            </small>
        </h1>
    </div>

    <div class="row">
        <div class="col-xs-8">
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="" class="col-sm-3 control-label">任务名称：</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="" id="" placeholder="任务名称">
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-3 control-label">手机号码：</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" rows="3" placeholder="手机号码"></textarea>
                    </div>
                    <div class="col-sm-3">
                        <span>从文件中导入号码</span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-3 control-label">内容：</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" rows="3" placeholder="短信内容"></textarea>
                    </div>

                </div>
                <div class="form-group">
                    <label for="" class="col-sm-3 control-label">签名：</label>

                    <div class="col-sm-6">
                        <select class="form-control">
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-3 control-label">类别：</label>
                    <div class="col-sm-6">
                        <label class="radio-inline">
                            <input type="radio" name="smstype" id="rdbase" value="1" />
                            普通短信
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="smstype" id="rdchang" value="2" />
                            长短信
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="smstype" id="rdmh" value="3" />
                            免费短信
                        </label>
                    </div>

                </div>
                <div class="form-group">
                    <label for="" class="col-sm-3 control-label">定时发送：</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="" id="" placeholder="定时发送">
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-sm-3 "></div>
                    <div class=" col-sm-6 checkbox">

                        <label>
                            <input type="checkbox">
                            <a href="_blank">同意SP信息源安全责任协议</a>
                        </label>

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-3 "></div>
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary">发 送</button>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-xs-4">
            <div class="widget-box">
                <div class="widget-header">
                    <h5>通讯录</h5>
                    @* <div class="widget-toolbar">
                        <a href="#" data-action=""></a>
                        <a href="#" data-action=""></a>
                        <a href="#" data-action=""></a>
                        <a href="#" data-action=""></a>
                    </div>*@
                </div>
                <div class="widget-body"></div>
            </div>
        </div>
    </div>

</div>

